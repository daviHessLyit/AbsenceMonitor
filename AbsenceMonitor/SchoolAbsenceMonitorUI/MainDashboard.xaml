<Window x:Class="SchoolAbsenceMonitorUI.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolAbsenceMonitorUI"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="SchoolAbsenceMonitor" Height="800" Width="1000" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="Images/background.png"/> 

        </Grid.Background>

        <StackPanel Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Label Content="School Absence Monitor" FontFamily="Calibri" FontSize="20" FontWeight="Bold" Margin="10,0"/>

        </StackPanel>
        
        <TabControl Grid.ColumnSpan="2" Grid.Row="1" HorizontalAlignment="Left" Margin="10,0" VerticalAlignment="Top" FontFamily="Calibri" FontSize="12" FontWeight="Medium">
            <TabItem  Height="26" Width="100" Header="Attendance" IsEnabled="True">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Height="26" Width="100" Header="Reporting" IsEnabled="False">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Height="26" Width="100" Header="Administration" IsEnabled="False">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Height="26" Width="100" Header="System" IsEnabled="False">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

        <DockPanel Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" >
           
            <Border BorderThickness="3" BorderBrush="Blue" CornerRadius="12" Padding="5">
                <Border.Effect>
                    <DropShadowEffect Color="AliceBlue"
                                      Opacity=".5"
                                      ShadowDepth="3"/>
                </Border.Effect>


                <Frame Name="frmMain"/>
            </Border>
        </DockPanel>
       
    </Grid>
</Window>
